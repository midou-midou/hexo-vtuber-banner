<% if(vData && hexo.config.vBanner.enable){ %>
    <div id="vBanner_Root">
        <div id="vBanner_Container" style="background-image: linear-gradient(to bottom right, white , <%- vData.color %>)">
            <a href="<%- vData.link %>">
                <% if(vData.link ) {%>
                    <div id="vBanner_post" title="<%- vData.name %>" style="background-image:url(<%- vData.VBanner %>)"></div>
                <% }else{ %>
                    <div id="vBanner_post" title="<%- vData.name %>"></div>
                <% } %>
            </a>
            <div id="vLogo_Container">
                <% if(vData.logo.length > 0 ) {%> 
                    <% if(
                        vData.logo.substr(vData.logo.lastIndexOf(".")+1) == 'png'||
                        vData.logo.substr(vData.logo.lastIndexOf(".")+1) == 'jpg'||
                        vData.logo.substr(vData.logo.lastIndexOf(".")+1) == 'jpeg'        
                    ) { %>        
                        <div id="vBanner_logo" style="background-image:url(<%- vData.logo %>)"></div>
                    <% }else{ %>
                        <div id="vBanner_name">Hello <%- vData.name %></div>
                    <% } %>
                <% }else{ %>
                    <div id="vBanner_name">Hello <%- vData.name %></div>
                <% } %>
            </div>
        </div>
    </div>
<% }%>