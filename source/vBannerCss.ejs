div#vBanner_Root{
    display: -webkit-flex;
    font-size: 100px;
    width: 100%;
    padding-top: 0.3em;
    box-sizing: border-box;
}

div#vBanner_Container{
    width: 100%;
    border-bottom-left-radius: 3px;
    border-bottom-right-radius: 3px;
    box-shadow: 1px 1px 4px rgb(18 18 18 / 45%);
    background-image: linear-gradient(to bottom right, white , <%- vData.VColor %> );
}

#vBanner_post{
    width: calc(100%);
    height: 2em;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    box-sizing: border-box;
    background-image: url('<%- vData.VBanner %>');
    background-size: 100% auto;
    background-position: center;
    overflow: hidden;
}

#vBanner_name{
    text-align: center;
    font:0.25em "Trebuchet MS", Arial, Helvetica, sans-serif;
}

#vLogo_Container{
    display: flex;
    flex-direction: row;
    justify-content: center;
}

#vBanner_logo{
    width: calc(40%);
    height: 0.4em;
    background-image: url('<%- vData.VLogo %>');
    background-position: center;
    background-size: auto 100%;
    background-repeat: no-repeat;
}

/* Extra small devices (phones, 600px and down) */
@media screen and (max-width: 375px) {
    #vBanner_post{
        height: 0.9em;
    }
    #vBanner_name{
        font-size: 0.15em;
    }
    #vBanner_logo{
        height: 0.3em;
    }
}

@media screen and (max-width: 425px) and (min-width: 375px) {
    #vBanner_post{
        height: 1em;
    }
    #vBanner_name{
        font-size: 0.15em;
    }
    #vBanner_logo{
        height: 0.3em;
    }
}

@media screen and (max-width: 600px) and (min-width: 425px) {
    #vBanner_post{
        height: 1em;
    }
    #vBanner_name{
        font-size: 0.2em;
    }
    #vBanner_logo{
        height: 0.3em;
    }
}

/* Small devices (portrait tablets and large phones, 600px and up) */
@media screen and (min-width: 600px) and (max-width: 768px) {
    #vBanner_post{
        height: 1.5em;
    }
    #vBanner_name{
        font-size: 0.2em;
    }
}

/* Medium devices (landscape tablets, 768px and up) */
@media screen and (min-width: 768px) and (max-width: 1024px)  {
    #vBanner_post{
        height: 1.5em;
    }
} 